<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="NFPCharting.InputOutput"
             xmlns:i18n="clr-namespace:NFPCharting.Helpers"
             Title="{i18n:Translate ImportExportLabel}"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" Padding="5">
                <Button x:Name="import_btn" Text="{i18n:Translate ImportLabel}" HorizontalOptions="CenterAndExpand" Clicked="Import_Clicked"/>
                <Button x:Name="export_btn" Text="{i18n:Translate ExportLabel}" HorizontalOptions="CenterAndExpand" Clicked="Export_Clicked"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" Padding="10">
                <Label LineBreakMode="WordWrap" Text="{i18n:Translate ImportExportOptions}" TextColor="{DynamicResource PrimaryTextColor}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
